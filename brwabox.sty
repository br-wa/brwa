\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{brwabox}[2020/09/01 0.0.1]

\RequirePackage{pgfopts}
\RequirePackage{amsthm} 
\RequirePackage{thmtools}
\PassOptionsToClass{svgnames}{xcolor} \RequirePackage{xcolor}

\newif\ifbrw@pset
\newif\ifbrw@notes

\brw@psetfalse
\brw@notesfalse

\pgfkeys{
	/brwabox/.cd,
	pset/.code=\brw@psettrue,
	notes/.code=\brw@notestrue
}

\ProcessPgfOptions{/brwabox}

\ifbrw@pset
	\newcounter{curprob}
	\NewDocumentCommand{\addsol}{o o}{
    	\stepcounter{curprob}
    	{\large \textbf{Solution \arabic{section}.\arabic{curprob}.} Collaborators:
        	\IfNoValueTF{#2}{None}{#2}
    	}
	}    
	\NewDocumentCommand{\skipsol}{}{\stepcounter{curprob}}
	\declaretheorem[numbered=no,name=Lemma]{lem}
\fi

\ifbrw@notes
	\declaretheorem[numberwithin=section,name=Definition]{defn}
	\declaretheorem[sibling=defn,name=Theorem]{theo}
	\declaretheorem[sibling=defn,name=Fact]{fact}
	\declaretheorem[sibling=defn,name=Example]{exm}
\fi
